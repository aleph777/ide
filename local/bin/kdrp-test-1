#!/usr/bin/perl -w    # -*-Perl-*-
#
use strict;
use v5.10;

use constant _ME_ => $0 =~ m=([^/]+)$=;

use constant BANNER => '=' x 10;

$SIG{QUIT} = sub { say join ' ',BANNER,'User terminated program',$$,BANNER; exit  0 };
$SIG{HUP}  = sub { say join ' ',BANNER,'User requested BIT',$$,     BANNER; exit 10 };
$SIG{INT}  = sub { say join ' ',BANNER,'User interrupt',$$,         BANNER; exit  2 };
$SIG{TERM} = sub { say join ' ',BANNER,'ABNORMAL TERMINATION',$$,   BANNER; exit 15 };

while(1)
{
  say $ARGV[0],' (',$$,') is alive';

  sleep 1;
}
