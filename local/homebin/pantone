use strict;
use v5.10;

use File::IO;

use constant _ME_ => $0 =~ m=([^/]+)$=;

my $io = File::IO->new(path => "$ENV{HOME}/ide/elisp/themes/colors/pantone.el",chomp => 1,newline => 1);

$io->get();

my @text;

my $flag = 0;

my ($colorHex,$colorName);

for(@{$io->contents})
{
  $flag = 1 if /^hex/i;

  if($flag == 0)
  {
    push @text,$_;

    next;
  }
  if(/^hex#: ([[:xdigit:]]+)/i)
  {
    $colorHex = join '','"#',lc($1),'"';
  }
  elsif(/^[^:]+$/)
  {
    s/ /-/g;
    s/[*\']//g;

    $colorName = lc $_;

    push @text,join '','(defconst pantone/',$colorName,' ',$colorHex,')';
  }
}
$io->put(contents => \@text);
