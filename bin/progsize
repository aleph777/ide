# Purpose:   Determines program image size
#
# Arguments: filname of program binary
#
# Revision:
#
use strict;
use v5.10;

my $size = hex(join '0x',((split ' ',(qx(objdump -x $ARGV[0] | grep text))[0])[2]));

printf "Size = %dK\n",$size/1024;
