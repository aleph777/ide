#
# Purpose:   Determines the minimum version of Perl required to be able the
#            input source code.
#
# Arguments: $1 is file 1 to check
#             .
#             .
#             .
#             $N is file N to check
#
# Revision:   27-May-2015 Changed to use ‘say’
#
use Perl::MinimumVersion;
use strict;

for(@ARGV)
{
  my $mv = Perl::MinimumVersion->new($_);

  print "$_: " if @ARGV > 1;

  CORE::say $mv->minimum_version;
}
