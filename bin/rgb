# Purpose:   convert to hex rgb
#
# Arguments: $1 is the red value
#            $2 is the green value
#            $3 is the blue value
#
# Revision:

use strict;
use v5.10;

my $flag = grep { $_ > 1 } @ARGV;

my ($r,$g,$b) = $flag ? map { int($_ + 0.5) } @ARGV : map { int(255*$_ + 0.5) } @ARGV;

say sprintf '#%02x%02x%02x',$r,$g,$b;
