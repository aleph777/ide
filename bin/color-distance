use Util::Color;
use strict;
use v5.10;

use constant _ME_ => $0 =~ m=([^/]+)$=;

die _ME_,": should have two arguments!!!" unless @ARGV == 2;

my ($color1,$color2) = @ARGV;

my $color = Util::Color->new();

say $color->computeDistance(hex1 => $color1,hex2 => $color2);
